<AbsoluteLayout id="filterComponent" loaded="onLoaded" top="650" left="0" class="filter-component" tap="onTap" 
    xmlns:Card="@nstudio/nativescript-cardview" 
    xmlns:MDL="nativescript-materialdropdownlist">
    <StackLayout top="60" left="0" orientation="horizontal" class="semi-actionbar" horizontalAlignment="left" horizontalAlignment="left">
        <Image horizontalAlignment="left" class="action-bar-logo" src="res://logo_white" />
        <Image horizontalAlignment="right" class="close" src="res://fa_close" tap="close" />
    </StackLayout>
    <StackLayout top="140" left="28" orientation="vertical" class="app-headers light-opacity">
        <Label horizontalAlignment="left" text="SEARCH FILTER" />
    </StackLayout>
    <StackLayout top="180" left="30" orientation="horizontal" class="search-stklayout">
        <TextField hint="{{ 'Enter a' + (forMedicine? ' medicine' : ' store') + ' name'  }}" text="{{ searchInput }}" class="search-txtfld" />
    </StackLayout>
    <StackLayout top="280" left="30" orientation="horizontal" class="label-header light-opacity">
        <Label verticalAlignment="bottom" text="PAYMENT " textWrap="true" />
        <StackLayout verticalAlignment="center" class="line" />
    </StackLayout>
    <StackLayout top="320" left="30" orientation="horizontal" horizontalAlignment="right" class="payment-option1-wrapper">
        <Label text="Deffered payment" textWrap="true" verticalAlignment="center" class="white bold light-opacity" />
        <StackLayout class="switch-wrapper light-opacity">
            <Switch id="notCashSwitch" checked="{{ notCash }}" class="switch-dash" width="45" />
        </StackLayout>
    </StackLayout>
    <StackLayout top="350" left="30" orientation="horizontal" horizontalAlignment="right" class="payment-option2-wrapper">
        <Label text="Cash payment" textWrap="true" verticalAlignment="center" class="white bold light-opacity" />
        <StackLayout class="switch-wrapper light-opacity">
            <Switch id="cashSwitch" checked="{{ cash }}" class="switch-dash" width="45" />
        </StackLayout>
    </StackLayout>
    <StackLayout top="400" left="30" orientation="horizontal" class="label-header light-opacity">
        <Label verticalAlignment="bottom" text="SEARCH FOR " textWrap="true" />
        <StackLayout verticalAlignment="center" class="line shorter" />
    </StackLayout>
    <StackLayout top="440" left="30" orientation="horizontal" horizontalAlignment="right" class="search4-option1-wrapper">
        <Label text="Store" textWrap="true" verticalAlignment="center" class="white bold light-opacity" />
        <StackLayout class="switch-wrapper light-opacity">
            <Switch id="forStoreSwitch" class="switch-dash" checked="{{ forStore }}" width="45" />
        </StackLayout>
    </StackLayout>
    <StackLayout top="470" left="30" orientation="horizontal" horizontalAlignment="right" class="search4-option2-wrapper">
        <Label text="Medicine" textWrap="true" verticalAlignment="center" class="white bold light-opacity" />
        <StackLayout class="switch-wrapper light-opacity">
            <Switch id="forMedicineSwitch" class="switch-dash" checked="{{ forMedicine }}" width="45" />
        </StackLayout>
    </StackLayout>
    <StackLayout top="510" left="30" orientation="horizontal" class="label-header light-opacity">
        <Label verticalAlignment="bottom" text="LOCATION " textWrap="true" />
        <StackLayout verticalAlignment="center" class="line short" />
    </StackLayout>
    <StackLayout orientation="horizontal" top="550" isEnabled="false" left="30" class="location-search">
        <Label text="{{ selectedCity || 'Choose city'}}" verticalAlignment="center" class="white light-opacity loc-lbl" textWrap="true" />
        <Button id="cities" class="location-btn" text="" tap="locationModal" />
    </StackLayout>
    <StackLayout orientation="horizontal" top="590" isEnabled="false" left="30" class="location-search">
        <Label text="{{ selectedArea || 'Choose area'}}" verticalAlignment="center" class="white light-opacity loc-lbl" textWrap="true" />
        <Button id="areas" class="location-btn" text="" tap="locationModal" />
    </StackLayout>
    <StackLayout top="680" left="170" class="filter-stklayout" verticalAlignment="top" id="filter-btn">
        <Button verticalAlignment="center" horizontalAlignment="center" text="Apply" tap="apply" class="btm-nav-side-center-btn" />
    </StackLayout>
    <ActivityIndicator top="600" left="180" style="z-index: 400" visibility="{{applyingIndicator}}" id="loadMoreItemsIndicator" busy="{{ applying }}" backgroundColor="transparent" color="#fff" width="30" height="30" />
</AbsoluteLayout>