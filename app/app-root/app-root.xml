<nsDrawer:RadSideDrawer id="sideDrawer" 
    xmlns:nsDrawer="nativescript-ui-sidedrawer"
     drawerLocation="Right"
    loaded="onLoaded">
    <nsDrawer:RadSideDrawer.drawerTransition>
        <nsDrawer:SlideInOnTopTransition/>
    </nsDrawer:RadSideDrawer.drawerTransition>

    <nsDrawer:RadSideDrawer.drawerContent>
        <!-- Here go the side drawer items -->
        <StackLayout class="side-drawer" >
            <Button text="" horizontalAlignment="left" class="close-btn" tap="closeSideDrawer" />
            <Button text="Home" class="drawer-item top-itme" tap="navMain" />
            <Button text="Profile" class="drawer-item" tap="navProfile" />
            <Button text="Cart" class="drawer-item" tap="navCart" />
            <Button text="Change Expired" class="drawer-item" tap="changeExpired" />
            <Button text="App Settings" class="drawer-item" tap="navCart" />
            <Button text="Contact Us" class="drawer-item" tap="navCart" />
            <Button text="Logout" class="drawer-item" tap="logout" />
            <!-- <Button text="Orders" class="drawer-item" tap="toOrders" /> -->
            
        </StackLayout>
    </nsDrawer:RadSideDrawer.drawerContent>

    <nsDrawer:RadSideDrawer.mainContent>
        <!-- This is the navigation frame -->
        <Frame id="mainFrame" defaultPage="views/loginAd/login-ad">
        </Frame>
    </nsDrawer:RadSideDrawer.mainContent>
</nsDrawer:RadSideDrawer>