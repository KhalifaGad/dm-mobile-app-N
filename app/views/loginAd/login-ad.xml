        <StackLayout top="50" left="160" class="logo">
            <AbsoluteLayout id="logoWrapper" class="logo-wrapper">
                <Label id="higherLogoPart" class="higher-logo" text="" />
                <Label id="lowerLogoPart" class="lower-logo" text="" />            
            </AbsoluteLayout>
        </StackLayout>
