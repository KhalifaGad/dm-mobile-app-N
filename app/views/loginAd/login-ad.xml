            <Label horizontalAlignment="center" text="You may ask for advertising" class="first-label" textWrap="true" />
            <Label horizontalAlignment="center" text="here!" class="second-label" textWrap="true" />
        </StackLayout>
        <Button text="skip" tap="skipAd" top="710" left="160" class="skip-btn" />
        
    </AbsoluteLayout>
</Page>