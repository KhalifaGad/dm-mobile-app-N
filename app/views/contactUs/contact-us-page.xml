<Page 
    id="drug-page"
    xmlns="http://schemas.nativescript.org/tns.xsd"
    xmlns:lv="nativescript-ui-listview"
	xmlns:actionBar="components/actionBar" 
	xmlns:bottomNav="components/bottomNav" navigatingTo="onNavigatingTo" class="page">
	<Page.actionBar>
		<actionBar:ActionBar-component />
	</Page.actionBar>

	<AbsoluteLayout id="secondChild">
		<StackLayout top="30" left="24" class="item-headers-wrapper">
            <StackLayout orientation="horizontal">
                <StackLayout orientation="vertical" horizontalAlignment="left" class="item-info-wrapper">
                    <StackLayout orientation="vertical">
                        <Label text="Call us on:" textWrap="true" horizontalAlignment="left" />
                        <Label text="010xxxxxxxxx" horizontalAlignment="center" textWrap="true" class="bold" />
                    </StackLayout>
                    <StackLayout orientation="vertical" class="email" >
                        <Label text="Email us on: " textWrap="true" horizontalAlignment="left" />
                        <Label text="customer-service@drug1market.com" horizontalAlignment="center" textWrap="true" class="bold small" />
                    </StackLayout>
                </StackLayout>
            </StackLayout>
        </StackLayout>
        <StackLayout id="items-container" top="280" left="0" orientation="vertical" class="home-items-stklayout">
            <StackLayout class="items-stacklayout" > 
                    <Label text="advertisement area" horizontalAlignment="center" verticalAlignment="middle" />
            </StackLayout>
        </StackLayout>
	</AbsoluteLayout>
</Page>